{
  "vim_mode": true,
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },
  "ui_font_size": 16,
  "buffer_font_size": 12,
  "buffer_font_features": {
    "calt": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80
        }
      }
    }
  }
}
