{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 12,
  "buffer_font_features": {
    "calt": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [{ "language_server": { "name": "ruff" } }]
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 80
        }
      }
    }
  },
  "language_models": {
    "ollama": {
      "api_url": "http://gorgonzola:11434"
    }
  }
}
